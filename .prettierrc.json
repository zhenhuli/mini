{
  "$schema": "http://json.schemastore.org/prettierrc",
  "trailingComma": "all",
  "singleQuote": true,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": ["*.axml"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.acss"],
      "options": {
        "parser": "css"
      }
    }
  ]
}
